<configs>
	<append xpath="/entity_classes">
    <entity_class name="invisibleCowHerdSpawner">
      <!-- A hack to thin the amount of animals spawned (friendly animals) -->
      <property name="Mesh" value="Gore/gore_block1_bonesPrefab"/>
      <property name="ModelType" value="Custom"/>
      <property name="Prefab" value="Backpack"/>
      <property name="Class" value="EntityAliveEventSpawnerSDX, Mods"/>
      <property name="Parent" value="Animals"/>
      <property name="TimeStayAfterDeath" value="1"/>
      <property name="IsEnemyEntity" value="false"/>
      <property name="LootListOnDeath" value="4"/>
      <!-- required because of reasons -->
      <property name="Faction" value="animals"/>
      <property class="SpawnSettings" >
        <property name="Leader" value="animalRabbit" /> 
        <property name="Followers" value="animalDoe,animalStag" />
        <property name="Followers" value="FriendlyAnimalsDesert" />
      </property>
    </entity_class>
  </append>
</configs>
