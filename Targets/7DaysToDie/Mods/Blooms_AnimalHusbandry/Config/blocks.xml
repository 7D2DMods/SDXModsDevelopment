<configs>
  <append xpath="/blocks" >
    <!-- This block will serve as a home location for the farm animals.-->
    <block name="cntCowHomeBlock">
      <property name="Class" value="Loot"/>
      <property name="CreativeMode" value="Player"/>
      <property name="Material" value="Mmetal_weak"/>
      <property name="MaxDamage" value="200" />
      <property name="Texture" value="267"/>
      <property name="Shape" value="ModelEntity"/>
      <property name="Path" value="solid"/>
      <property name="Model" value="Entities/LootContainers/loot_cratePrefab"/>
      <property name="Place" value="TowardsPlacerInverted"/>
      <property name="LootList" value="1"/>
      <property class="RepairItems">
        <property name="resourceForgedIron" value="6"/>
      </property>
      <drop event="Harvest" name="resourceScrapIron" count="10,20" tag="allHarvest"/>
      <drop event="Destroy" count="0"/>
      <drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>
      <property name="EconomicValue" value="156"/>
      <property name="FilterTags" value="floot,ffurniture"/>

      <!-- Buff to keep the animals close by. thenumber in the ( ) is the range -->
      <property name="ActiveRadiusEffects" value="buffAnimalStatusCheck(15)"/>

    </block>

   

  </append>
</configs>