    <!-- The starting buffs. Semi-colon delimited! -->
    <property name="Buffs" value="buffAnimalStatusCheck;buffStatusCheck;buffAnimalBaby;buffSanitationStatusCheck;buffAnimalChicken" />

    <!-- Food items and bins that this entity will eat, if using the right AI Task -->
